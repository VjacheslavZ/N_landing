doctype html
html(class="no-js" lang='en')
    head
        meta(charset='UTF-8')
        meta(name='viewport', content='width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0')
        meta(http-equiv='X-UA-Compatible', content='ie=edge')
        title
            block title

        style(type='text/css').
            html .loader {
                background: #fff;
                z-index: 9999;
                position: fixed;
                bottom: 0;
                left: 0;
                right: 0;
                top: 0;
                width: 100%;
                height: 100%;
            }

            html .loader .loader_inner {
                background-size: cover;
                background-position: center center;
                background-repeat: no-repeat;
                background-color: #fff;
                height: 200px;
                width: 200px;
                margin-top: -100px;
                margin-left: -100px;
                left: 50%;
                top: 50%;
                position: absolute
            }


        link(rel='stylesheet', href='css/libs.min.css')
        link(rel='stylesheet', href='css/main.css')

    body
        div#my-page
            div
                .loader
                    .loader_inner
                        include ../img/preloader.svg



            header.header
                video(src="video/sunset.mp4" autoplay loop).header__video-bg
                .container
                    .row
                        .header__wrap
                            .header__nav
                                .header__logo
                                    a(href="index.html" class="logo" title="Логотип").
                                        SiteName
                                nav
                                    ul.header__menu
                                        li
                                            a(href="#") For Businesses
                                        li
                                            a(href="#") My Planning Tools
                                        li
                                            a(href="#") Find Businesses
                                        li
                                            a(href="#") Find Products
                                    a(href="#").custom-button Log in of Sign up

                            .header__top-section
                                .header__info
                                    h1.header__title Plan the perfect funeral in less than five minutes
                                    p.header__description Let us do work for you - than share your wishes with family and friends

                                form(name="city or zip code").header__form
                                    input(type="hidden" name="city or zip code" value="")
                                    label
                                    input(type="text" name="city or zip code" placeholder="Enter city or zip code" required=)
                                    button(type='submit') Get Quote
            block main

            footer.footer#my-footer
                h3 footer


        script(src='js/libs.min.js')
        script(src='js/common.js')

